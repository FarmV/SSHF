<Window x:Class="Consoletest.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Consoletest"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox Text="Test1" Grid.Column="0" Grid.Row="3" Background="Gray" Width="175" Height="30" 

                 VerticalAlignment="Center"
                 HorizontalAlignment="Right"
                 Margin="0 0 20 0"
                 Name="LengthTBX"/>
        <TextBox Text="{Binding aaa,UpdateSourceTrigger=LostFocus}" Grid.Column="1" Grid.Row="4" Background="Gray" Width="175" Height="30" 
                 VerticalAlignment="Center"
                  Margin="20 0 0 0"
                 HorizontalAlignment="Left"
                 Name="HeightTBX"/>
    </Grid>
</Window>
