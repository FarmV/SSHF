<mah:MetroWindow    
    x:Name="Fast"
    x:Class="SSHF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    mc:Ignorable="d"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:SSHF.ViewModels.MainWindowViewModel"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
  
    xmlns:converter ="clr-namespace:SSHF.Windows.MainWindow"   
    xmlns:actions="clr-namespace:MahApps.Metro.Actions;assembly=MahApps.Metro"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:rxui="clr-namespace:System.Reactive;assembly=System.Reactive"
    xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
    
    AllowsTransparency="True"
    WindowStyle="None"      
    Topmost="True" 

    ShowInTaskbar="False"    
    ShowTitleBar="False"
    ShowMinButton="False"
    ShowCloseButton="False"
    ShowMaxRestoreButton="False"
    NonActiveBorderBrush="Transparent"
 
      
    ResizeMode="NoResize"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel, IsDesignTimeCreatable=True}"
    Visibility="Visible"
   >
    <Window.Resources>
        <converter:ConverterImageDPIViewport x:Key="ConDPIViewport"/>
        <converter:ConverterVisibleToOpacity x:Key="ConVisToOP"/>
    </Window.Resources>

    <i:Interaction.Triggers>

        <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
            <i:InvokeCommandAction Command="{Binding StopWindowUpdater}" 
                                   CommandParameter="{x:Static rxui:Unit.Default}"/>
        </i:EventTrigger>

        <i:EventTrigger EventName="PreviewMouseDoubleClick">
            <i:InvokeCommandAction Command="{Binding HideWindow}" 
                                   CommandParameter="{x:Static rxui:Unit.Default}"/>
        </i:EventTrigger>

        <i:EventTrigger EventName="MouseLeftButtonDown">
            <i:InvokeCommandAction Command="{Binding DragMoveWindow}" 
                                   CommandParameter="{x:Static rxui:Unit.Default}"/>
        </i:EventTrigger>

        <i:EventTrigger EventName="PreviewMouseMove">
            <i:InvokeCommandAction Command="{Binding DropImage}"                                  
                                   PassEventArgsToCommand="True"/>
        </i:EventTrigger>

    </i:Interaction.Triggers>
    <Window.Style>
        <Style TargetType="{x:Type Window}">
            <Setter Property="Background">
                <Setter.Value>
                    <Binding Path="BackgroundImage" Converter="{StaticResource ConDPIViewport}"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Opacity">
                <Setter.Value>
                    <Binding Path="VisibleCondition" Converter="{StaticResource ConVisToOP}"/>
                </Setter.Value>
            </Setter>

        </Style>
    </Window.Style>

    <!--<Grid Background="{Binding BackgroundImage, Converter={StaticResource ConDPIViewport}}" >
        
    </Grid>-->

</mah:MetroWindow>
