    <WrapPanel x:Name="Pnael1" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button 
            x:Name="box1"
            Command ="{Binding RefreshOnCommand}"          
            Margin="0,0,0,0" 
            MinWidth="512" 
            MaxWidth="512" 
            MinHeight="512"
            MaxHeight="512"
           
       >
            <Button.Background>
                <ImageBrush ImageSource="{Binding Image}"/>
            </Button.Background>
            <Button.Foreground>
                <ImageBrush ImageSource="{Binding Image}"/>
            </Button.Foreground>
            <Button.OpacityMask>
                <ImageBrush ImageSource="{Binding Image}"/>
            </Button.OpacityMask>

            <behaviors:Interaction.Triggers>
                <behaviors:EventTrigger EventName="MouseRightButtonUp">

                    <behaviors:InvokeCommandAction Command="{Binding SelectFileCommand}"/>

                </behaviors:EventTrigger>
            </behaviors:Interaction.Triggers>






        </Button>


