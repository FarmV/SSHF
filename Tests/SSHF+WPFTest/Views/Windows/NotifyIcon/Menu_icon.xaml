<Window x:Class="SSHF.Views.Windows.NotifyIcon.Menu_icon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SSHF.Views.Windows.NotifyIcon"
        xmlns:vmN="clr-namespace:SSHF.ViewModels.NotifyIconViewModel"
        xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors" 
        xmlns:vmD="clr-namespace:SSHF.Models.NotifyIconModel"
        AllowDrop="True"
        Background="Transparent"
        WindowStyle="None"
        Title="Menu_icon"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Topmost="True"
        
        
      
        
       >

    <Window.DataContext>
        <vmN:NotifyIconViewModel/>
    </Window.DataContext>



    <StackPanel MinWidth="100" >

        <Button FontFamily="Franklin Gothic" FontSize="32" Content="1"></Button>
        <Button FontFamily="Franklin Gothic" FontSize="32" Content="2"></Button>
        <Button FontFamily="Franklin Gothic" FontSize="32" Content="3"></Button>
        <Button Command="{Binding ShutdownAppCommand}" FontFamily="Franklin Gothic" FontSize="32" Content="Закрыть"></Button>
    </StackPanel>


</Window>

    